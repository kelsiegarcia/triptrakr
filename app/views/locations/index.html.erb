<h1>Locations#index</h1>
<p>Find me in app/views/locations/index.html.erb</p>

<% if @locations.any? %>
  <ul>
    <% @locations.each do |location| %>
      <li>
        <%= link_to location.title, trip_location_path(location) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h4>You don't have any locations planned yet!</h4>
<% end %>


<%= link_to 'Add New location', new_trip_location_path %>
<%= link_to 'Delete Trip', trip_path(@trip), method: :delete %>